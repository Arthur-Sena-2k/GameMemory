<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgback6">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JOGO DA MEMORIA"
        android:textColor="#FBFBFB"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.104" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="#A3000000"
        android:max="100"
        android:progress="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.178" />

    <GridLayout
        android:id="@+id/gridLayoutJogo"
        android:layout_width="393dp"
        android:layout_height="385dp"
        android:layout_gravity="center"
        android:columnCount="6"
        android:rowCount="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:src="@drawable/i5"
            android:background="#706E6E"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:src="@drawable/i2"
            android:background="#706E6E"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:src="@drawable/i8"
            android:background="#706E6E"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_margin="5dp"
            android:src="@drawable/i7"
            android:background="#706E6E"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:src="@drawable/i7"
            android:background="#706E6E"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:background="#706E6E"
            android:src="@drawable/i1" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:src="@drawable/i4"
            android:background="#706E6E"/>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="5dp"
            android:src="@drawable/i6"
            android:background="#706E6E"/>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:src="@drawable/i6"
            android:background="#706E6E"/>

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:background="#706E6E"
            android:src="@drawable/i3"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:src="@drawable/i5"
            android:background="#706E6E"/>

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="5dp"
            android:src="@drawable/i4"
            android:background="#706E6E"/>

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:src="@drawable/i3"
            android:background="#706E6E"/>

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:src="@drawable/i2"
            android:background="#706E6E"/>

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:src="@drawable/i1"
            android:background="#706E6E"/>

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_margin="5dp"
            android:src="@drawable/i8"
            android:background="#706E6E"/>
    </GridLayout>

    <Button
        android:id="@+id/botaoComecarJogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:text="Novo Jogo"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92"
        tools:ignore="MissingConstraints"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>